<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" prefHeight="600.0" prefWidth="450.0" spacing="30.0" stylesheets="@../estilos/LoginVista.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.LoginController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="titulo" alignment="CENTER" maxHeight="50.0" maxWidth="328.0" minHeight="50.0" minWidth="300.0" prefHeight="50.0" prefWidth="328.0" text="Meet Up Agl" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Cambria Bold" size="48.0" />
         </font>
      </Label>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Pane maxHeight="75.0" maxWidth="400.0" minHeight="75.0" minWidth="400.0" prefHeight="75.0" prefWidth="400.0">
               <children>
                  <TextField fx:id="usuario" layoutX="50.0" layoutY="13.0" maxHeight="50.0" maxWidth="300.0" minHeight="50.0" minWidth="300.0" prefHeight="50.0" prefWidth="300.0" promptText="Escriba su nombre de usuario">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
                  <Label layoutX="55.0" layoutY="3.0" styleClass="lbl" text="USUARIO" textFill="WHITE">
                     <padding>
                        <Insets bottom="2.0" left="4.0" right="4.0" top="2.0" />
                     </padding>
                     <font>
                        <Font name="Cambria" size="14.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Pane maxHeight="75.0" maxWidth="400.0" minHeight="75.0" minWidth="400.0" prefHeight="75.0" prefWidth="400.0">
               <children>
                  <PasswordField fx:id="contraseña" layoutX="55.0" layoutY="25.0" maxHeight="50.0" maxWidth="300.0" minHeight="50.0" minWidth="300.0" prefHeight="50.0" prefWidth="300.0" promptText="Escriba su contraseña">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </PasswordField>
                  <Label layoutX="55.0" layoutY="17.0" styleClass="lbl" text="CONTRASEÑA" textFill="WHITE">
                     <padding>
                        <Insets bottom="2.0" left="4.0" right="4.0" top="2.0" />
                     </padding>
                     <font>
                        <Font name="Cambria" size="14.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="mostrarOcultar" fitHeight="25.0" fitWidth="25.0" layoutX="316.0" layoutY="38.0" onMousePressed="#mostrarContraseña" onMouseReleased="#mostrarContraseña" pickOnBounds="true" preserveRatio="true" styleClass="img" />
               </children>
            </Pane>
            <VBox alignment="TOP_CENTER" maxWidth="400.0" minWidth="400.0" prefHeight="200.0" prefWidth="400.0" spacing="15.0">
               <children>
                  <Label onMouseClicked="#ingresarRegistro" text="Aún no está registrado?. Regístrese aquí" textFill="WHITE">
                     <font>
                        <Font name="Cambria" size="15.0" />
                     </font>
                  </Label>
                  <VBox prefHeight="0.0" prefWidth="468.0" />
                  <Button maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#ingresarApp" prefHeight="40.0" prefWidth="150.0" text="INGRESAR">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
      <ImageView fx:id="logo" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</VBox>
